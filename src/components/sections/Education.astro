---
import Section from "@/components/Section.astro"

import { education } from "src/cv.json"
---

<Section title="Educación">
  <ul>
    {
      education.map(({ institution, url, startDate, endDate, area }) => {
        const startYear = new Date(startDate).getFullYear()
        const endYear = endDate != null ? new Date(endDate).getFullYear() : "Actualmente"
        const years = `${startYear} - ${endYear}`

        return (
          <li>
            <article>
              <header>
                <div>
                  <h3>
                  <a 
                    href={url} 
                    title={`Visitar página ${institution}`} 
                    target="_blank" 
                    rel="noopener noreferrer"
                  >
                    {institution}
                  </a>
                </h3>
                </div>

                <time>{years}</time>
              </header>
              <footer>
                <p>{area}</p>
              </footer>
            </article>
          </li>
        )
      })
    }
  </ul>
</Section>

<style>
  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }

  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 600;
    color: #111;
  }

  article a {
    color: #111;
  }

  article a:hover {
    text-decoration: underline;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  footer p {
    font-weight: 500;
  }

  time {
    color: #555;
    font-size: .85rem;
    /* min-width: 103px; */
  }
</style>